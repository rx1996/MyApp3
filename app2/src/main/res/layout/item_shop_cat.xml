<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:padding="10dp">
        <CheckBox
            android:id="@+id/checkbox_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="10dp"
            android:paddingLeft="0dp"
            android:textColor="#fff"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/iv_gov"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_desc_gov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:singleLine="true"
                android:text="华硕（ASUS）经典系列X554LP 15.6英寸笔记本 （i5-5200U 4G 500G R5-M230 1G独显 蓝牙 Win8.1 黑色）"
                android:textColor="#404040"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_price_gov"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginTop="50dp"
                android:text="￥0.0"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="gone"
        android:padding="10dp">
        <CheckBox
            android:id="@+id/checkbox_all2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="10dp" />
        <ImageView
            android:layout_toRightOf="@id/checkbox_all2"
            android:id="@+id/iv_gov2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_marginRight="10dp"
            android:id="@+id/ll_2"
            android:layout_toRightOf="@id/iv_gov2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <myapplication.liangcang.shopcat.view.AddSubView
                android:id="@+id/nas_goodinfo_num"
                app:maxValue="12"
                app:minValue="1"
                app:numberAddBackground="@drawable/goods_add_btn"
                app:numberSubBackground="@drawable/goods_sub_btn"
                app:value="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </myapplication.liangcang.shopcat.view.AddSubView>
            <TextView
                android:id="@+id/tv_desc_gov2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:singleLine="true"
                android:text="华硕（ASUS）经典系列X554LP 15.6英寸笔记本 （i5-5200U 4G 500G R5-M230 1G独显 蓝牙 Win8.1 黑色）"
                android:textColor="#404040"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_price_gov2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="￥0.0"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:layout_toRightOf="@id/ll_2"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/tv_shanchu"
            android:gravity="center"
            android:padding="10dp"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="130dp" />
    </RelativeLayout>
    <View
        android:layout_below="@id/ll_1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#22000000" />


</RelativeLayout>