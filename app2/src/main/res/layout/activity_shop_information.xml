<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    tools:context="myapplication.liangcang.shop.activity.ShopInformationActivity">
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_below="@id/banner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:textColor="#000000"
                android:text="JEX捷古斯"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_desc"
                android:lines="2"
                android:singleLine="true"
                android:textColor="#000000"
                android:text="【独家首发】乐可丽舒漱口水 | 乳酸菌强效抗菌 清爽低刺激【300ml】"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_like_image"
                android:src="@drawable/topic_nofavour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_like_num"
                android:textColor="#000000"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_fenxiang"
                android:src="@drawable/ic_share_liangcang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_1"
        android:orientation="horizontal"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_price"
            android:text="￥98.0"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ic_free_shiptip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="免运费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ic_free_shiptip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="正品授权"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_1"
        android:id="@+id/ll_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#77000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_size_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="选择"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="尺码"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="颜色"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="数量"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_right_liangcang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_2"
        android:id="@+id/ll_3"
        android:background="#77000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_image"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_name2"
                android:layout_marginLeft="10dp"
                android:text="JEX捷古斯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_right_liangcang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/rg_main"
        android:layout_below="@id/ll_3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_gushi"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="商品详情"
            android:background="@drawable/pinpai_gushi"
            android:textColor="@drawable/gushi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_chanpin"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="购物须知"
            android:background="@drawable/pinpai_gushi"
            android:textColor="@drawable/gushi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
</RelativeLayout>
